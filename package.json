{
  "name": "make-webbly-things",
  "version": "1.8.0",
  "type": "module",
  "description": "A platform for hosting user generated websites",
  "author": "Pomax (pomax@nihongoresources.com)",
  "license": "See LICENSE.md",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "admin": "npm start -- --admin-mode",
    "build": "npm run format && npm run lint && npm run bundle",
    "bundle": "esbuild --log-level=info --bundle --external:/vendor/* --format=esm --target=esnext src/client/entry-point.js > public/js/editor.bundle.js",
    "format:css": "prettier --write \"./public/**/*.css\"",
    "format:html": "prettier --write \"./public/**/*.html\" --plugin prettier-plugin-jinja-template",
    "format:js": "prettier --write \"./src/**/*.js\"",
    "format:single": "prettier --no-config --ignore-path \"\" --write ",    
    "format": "npm run format:js && npm run format:html && npm run format:css",
    "lint": "biome lint --write src --max-diagnostics=none",
    "postinstall": "npx playwright install chromium && cp -r ./node_modules/file-icon-vectors/dist/icons/classic ./public/themes/default/images/icons/",
    "precheck": "node --env-file=.env check-deps",
    "start": "npm run precheck && node --env-file=.env src/server/index.js",
    "test:cleanup": "node ./src/tests/test-cleanup.js",
    "test:node": "cross-env NODE_ENV=TESTING node --env-file=.env --experimental-test-coverage --test \"./src/tests/**/*.test.js\"",
    "test:suite": "npm run precheck && npm run build && npm run test:node",
    "test:node:ci": "npm run test:node:ci:setup && npm run test:node:ci:server:caddy",
    "test:node:ci:setup": "cross-env NODE_ENV=TESTING node --env-file=.env --test \"./src/tests/setup/**/*.test.js\"",
    "test:node:ci:server:caddy": "cross-env NODE_ENV=TESTING node --env-file=.env --test \"./src/tests/server/caddy/**/*.test.js\"",
    "test": "npm run test:cleanup && npm run test:suite && npm run test:cleanup"
  },
  "dependencies": {
    "@biomejs/biome": "^2.3.2",
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-markdown": "^6.2.5",
    "@codemirror/state": "^6.4.1",
    "@playwright/test": "^1.45.1",
    "any-ascii": "^0.3.3",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.4.1",
    "better-sqlite3-session-store": "^0.1.0",
    "codemirror": "^6.0.1",
    "cross-env": "^10.0.0",
    "custom-file-tree": "^6.1.0",
    "esbuild": "^0.25.8",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "file-icon-vectors": "^1.0.0",
    "helmet": "^7.1.0",
    "marked": "^16.2.1",
    "mime": "^4.0.7",
    "multer": "^2.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-magic-link": "^2.1.1",
    "passport-mastodon": "^0.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "ubase.js": "^1.0.3",
    "ws": "^8.18.3"
  }
}
